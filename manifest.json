{
  "manifest_version": 2,
  "name": "video-controler",
  "version": "1.0",
  "homepage_url": "https://github.com/shawn-sawa/video-controller-extension",

  "description": "extension that provides a way to control the speed of videos",

  "icons": {
    "32": "./icons/icon-32.png",
    "48": "./icons/icon-48.png",
    "128": "./icons/icon-128.png"
  },
  "permissions": ["tabs", "activeTab", "<all_urls>"],

  "browser_action": {
    "default_icon": "./icons/icon-32.png",
    "default_title": "Video Speed Controler",
    "default_popup": "./popup/popup.html"
  },
  "background": {
    "scripts": ["./background/background.js"]
  }
}
